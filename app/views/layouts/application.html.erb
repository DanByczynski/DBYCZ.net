    <div class="container">
      <h1 class="logo">DBYCZ.IO</h1>
      <p class="logodesc">Daniel Byczynski - Web Application Developer</p>
      <hr class="clear" />
      <div class="col-lg-2">
        <ul>
          <li class="sidelink"><%= active_link_to "ABOUT", 'welcome', :active => true %></li>
          <li class="sidelink"><%= active_link_to "PROJECTS", 'projects', :active => true %></li>
          <li class="sidelink"><%= active_link_to "SKILLS", 'skills', :active => true %></li>
          <li class="sidelink"><%= active_link_to "CONTACT", 'contacts', :active => true %></li>
        </ul>
      </div>
      
      <div class="col-lg-10">
        <%= yield %>
      </div>


    </div>
  </body>
</html>
